pipeline {
    agent any

    stages {
       stage('Checkout with sparse checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/pareekpulkit/brainwave-basket.git',
                        credentialsId: 'github-token'
                    ]],
                    extensions: [
                        // This clears the workspace before checkout
                        [$class: 'CleanBeforeCheckout'],
                        // You may also try disabling shallow clone, if necessary
                    ]
                ])

                script {
                    // Enable sparse checkout after the repo is cloned
                    sh '''
                    git config core.sparseCheckout true
                    echo "Hotel Reservation Prediction/" > .git/info/sparse-checkout
                    git read-tree -mu HEAD
                    '''
                }
            }
        }
    }

        // Add your build/deployment stages here, assuming the specific folder is now at the root of the workspace
    }
}